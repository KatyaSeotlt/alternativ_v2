<?xml version='1.0' encoding='utf-8'?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.seotlt.victory"
        version     = "1.0.5" >
 
    <name>Victorytracker</name>
    <description>
       Victorytracker
    </description>
 
    <author href="http://seotlt.ru" email="info@seotlt.ru">
        seotlt
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="images/pages/logo.png" />
     <Preference name = 'phonegap-version' value = 'cli-7.0.1' /> 
     <preference name = 'pgb-builder-version' value = '2' />
    <platform name="android">

        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <feature name="Geolocation">
            <param name="android-package" value="org.apache.cordova.GeoBroker" />
        </feature>
        <icon platform="android" qualifier="ldpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="mdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="hdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="xhdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="xxhdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="fr-xxhdpi" src="images/pages/logo.png" />
        <manifest>
            <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
        </manifest>
    </platform>
    <platform name="ios">
          <preference name="orientation" value="portrait" />
         <preference name="fullscreen" value="true" />
         <preference name="KeepRunning" value="false"/>
         <preference name="SplashScreen" value="splash"/>
         <preference name="android-build-tool" value="gradle" />  
         <preference name="target-device" value="handset" />      <!-- all: possible values handset, tablet, or universal -->
     
       <icon platform="ios" src="images/icons/ios/Icon-App-29x29@1x.png" width="29" height="29" />
       <icon platform="ios" src="images/icons/ios/Icon-App-29x29@2x.png" width="58" height="58" />
       <icon platform="ios" src="images/icons/ios/Icon-App-40x40@1x.png" width="40" height="40" />
       <icon platform="ios" src="images/icons/ios/Icon-App-40x40@2x.png" width="80" height="80" />
       <icon platform="ios" src="images/icons/ios/Icon-Small-50x50@1x.png" width="50" height="50" />
       <icon platform="ios" src="images/icons/ios/Icon-Small-50x50@2x.png" width="100" height="100" />
       <icon platform="ios" src="images/icons/ios/Icon-App-57x57@1x.png" width="57" height="57" />
       <icon platform="ios" src="images/icons/ios/Icon-App-57x57@2x.png" width="114" height="114" />
       <icon platform="ios" src="images/icons/ios/Icon-App-60x60@1x.png" width="60" height="60" />
       <icon platform="ios" src="images/icons/ios/Icon-App-60x60@2x.png" width="120" height="120" />
       <icon platform="ios" src="images/icons/ios/Icon-App-60x60@3x.png" width="180" height="180" />
       <icon platform="ios" src="images/icons/ios/Icon-App-72x72@1x.png" width="72" height="72" />
       <icon platform="ios" src="res/icons/ios/Icon-App-72x72@2x.png" width="144" height="144" />
       <icon platform="ios" src="images/icons/ios/Icon-App-76x76@1x.png" width="76" height="76" />
       <icon platform="ios" src="images/icons/ios/Icon-App-76x76@2x.png" width="152" height="152" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-firebase" spec="~0.1.23" />
</widget>