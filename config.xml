<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.seotlt.victory" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Victorytracker</name>
    <description>
       Victorytracker
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="images/pages/logo.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <feature name="Geolocation">
            <param name="android-package" value="org.apache.cordova.GeoBroker" />
        </feature>
        <icon platform="android" qualifier="ldpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="mdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="hdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="xhdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="xxhdpi" src="images/pages/logo.png" />
        <icon platform="android" qualifier="fr-xxhdpi" src="images/pages/logo.png" />
        <manifest>
            <uses-permission name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
        </manifest>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <feature name="Geolocation">
            <param name="ios-package" value="CDVLocation" />
        </feature>
        <icon height="50" platform="ios" src="images/pages/logo.png" width="50" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
     <plugin name="cordova-plugin-fcm" spec="~2.1.2" />
</widget>